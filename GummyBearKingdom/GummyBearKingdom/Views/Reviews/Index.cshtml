@model IEnumerable<GummyBearKingdom.Models.Review>

@{
    Layout = "_Layout";
    ViewBag.Title = "GBK - Add Review";
}

<h1>Add A Review For @ViewBag.Product.Name</h1>

@if (Model.Count() == 0)
{
    <h3>Average Rating: N/A</h3>
}
else
{
    <h3>Average Rating: @ViewBag.Product.GetAverageRating()</h3>
}
<h4>@Html.ActionLink("Add Review", "Create", "Reviews", new { id = ViewBag.Product.ProductId })</h4>
<h4>@Html.ActionLink("Back", "Details", "Products", new { id = ViewBag.Product.ProductId })</h4>

@foreach (var review in Model)
{
    <div>
        <h4>Rating: @review.Rating</h4>
        <h5>@review.Content</h5>
        <br />
    </div>
}
