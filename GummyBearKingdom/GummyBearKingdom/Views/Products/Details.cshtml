@model GummyBearKingdom.Models.Product

@{
    Layout = "_Layout";
    ViewBag.Title = "GBK - " + Model.Name;
}

<h1>@Model.Name</h1>
<h4>@Model.Cost.ToString("$0.00")</h4>
<p>@Model.Description</p>
@if (Model.Reviews.Count() == 0)
{
    <h3>Average Rating: N/A</h3>
}
else
{
    <h3>Average Rating: @Model.GetAverageRating().ToString("0.0")<span class="glyphicon glyphicon-star"></span></h3>
}
<h4>@Html.ActionLink("Add Review", "Create", "Reviews", new { id = Model.ProductId })</h4>
<h4>@Html.ActionLink("See All Reviews", "Index", "Reviews", new { id = Model.ProductId })</h4>


@Html.ActionLink("Return To Product List", "Index") |
@Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }) |
@Html.ActionLink("Delete", "Delete", new { id = Model.ProductId })
