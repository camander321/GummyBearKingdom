@model GummyBearKingdom.Models.Product

@{
    Layout = "_Layout";
    ViewBag.Title = "GBK - " + Model.Name;
}

<h1>@Model.Name</h1>
<h4>@Model.Cost</h4>
<p>@Model.Description</p>
@if (Model.Reviews.Count() == 0)
{
    <h3>Average Rating: N/A</h3>
}
else
{
    <h3>Average Rating: @Model.GetAverageRating()</h3>
}


@Html.ActionLink("Return To Product List", "Index") |
@Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }) |
@Html.ActionLink("Delete", "Delete", new { id = Model.ProductId })
